extends ../shared/template
block content
  h2 Goals
  table.table.table-striped.table-hover.table-bordered
    thead
      tr
        th Goal
        th Due
        th Tags
    tbody
      each goal in goals
        tr
          td: a(href='/goals/#{goal._id}')= goal.name
          td= moment(goal.due).format("MMM Do, YYYY")
          td= goal.tags

block scripts
